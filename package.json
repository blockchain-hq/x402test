{
  "name": "x402test",
  "version": "0.1.1",
  "type": "module",
  "description": "Testing framework for x402 payment flows on Solana",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "bin": {
    "x402test": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "postbuild": "chmod +x dist/cli/index.js"
  },
  "keywords": [
    "x402",
    "solana",
    "testing",
    "payments",
    "web3",
    "blockchain",
    "micropayments",
    "ai-agents",
    "usdc",
    "payment-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/blockchain-hq/x402test"
  },
  "homepage": "https://github.com/blockchain-hq/x402test#readme",
  "author": "blockchainhq",
  "license": "MIT",
  "dependencies": {
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.87.0",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "express": "^5.1.0",
    "ora": "^9.0.0",
    "solana-test-wallets": "latest",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.7"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
